{
  "version": 8,

  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "BaseWindows",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "installDir": "${sourceDir}/Install/${presetName}",
      "cacheVariables": {
        "PRESET_NAME": "${presetName}"
      }
    },

    {
      "name": "Debug (x64)",
      "displayName": "Debug (x64)",
      "inherits": "BaseWindows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CONFIGURATION_MACRO": "FRO_DEBUG",
        "PLATFORM_MACRO": "FRO_x64"
      }
    },

    {
      "name": "Release (x64)",
      "displayName": "Release (x64)",
      "inherits": "BaseWindows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CONFIGURATION_MACRO": "FRO_RELEASE",
        "PLATFORM_MACRO": "FRO_x64"
      }
    },

    {
      "name": "Distribute (x64)",
      "displayName": "Distribute (x64)",
      "inherits": "BaseWindows",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CONFIGURATION_MACRO": "FRO_DISTRIBUTE",
        "PLATFORM_MACRO": "FRO_x64"
      }
    },

    {
      "name": "Debug (x86)",
      "displayName": "Debug (x86)",
      "inherits": "BaseWindows",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CONFIGURATION_MACRO": "FRO_DEBUG",
        "PLATFORM_MACRO": "FRO_x86"
      }
    },

    {
      "name": "Release (x86)",
      "displayName": "Release (x86)",
      "inherits": "BaseWindows",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CONFIGURATION_MACRO": "FRO_RELEASE",
        "PLATFORM_MACRO": "FRO_x86"
      }
    },

    {
      "name": "Distribute (x86)",
      "displayName": "Distribute (x86)",
      "inherits": "BaseWindows",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CONFIGURATION_MACRO": "FRO_DISTRIBUTE",
        "PLATFORM_MACRO": "FRO_x86"
      }
    }
  ]
}